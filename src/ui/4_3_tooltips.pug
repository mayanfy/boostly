- var title = 'JavaScript Widgets';
- var subtitle = 'Tooltips';

doctype html
html(lang="en")
  
  include includes/header.pug

  body
    
    //- Header
    include includes/title-details.pug

    //- Body
    .container
      // TOOLTIPS
      button.btn.btn-primary(data-toggle='tooltip', data-placement='top', title='Tooltip on top') Tooltip On Top
      button.btn.btn-success(data-toggle='tooltip', data-placement='right', title='Tooltip on right') Tooltip On Right
      button.btn.btn-warning(data-toggle='tooltip', data-placement='bottom', title='Tooltip on bottom') Tooltip On Bottom
      button.btn.btn-danger(data-toggle='tooltip', data-placement='left', title='Tooltip on left') Tooltip On Left
      br
      br
      // TOOLTIPS WITH HTML
      button#hello.btn.btn-primary(data-toggle='tooltip', data-placement='top', data-html='true', title='<h3>Hello</h3><p>Hello World</p>') Tooltip On With HTML
      hr
      // TRIGGER WITH JS
      button.btn.btn-secondary(onclick='showTooltip()')
        | Show Tooltip
      button.btn.btn-secondary(onclick='hideTooltip()')
        | Hide Tooltip
      button.btn.btn-secondary(onclick='toggleTooltip()')
        | Toggle Tooltip
